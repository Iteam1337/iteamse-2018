{
  "name": "iteam-cms",
  "version": "0.2.0",
  "description": "GraphQL integration to Contentful for iteam.se",
  "author": "Rickard Laurin <rickard.laurin@gmail.com>",
  "license": "MIT",
  "main": "lib/server.js",
  "scripts": {
    "start": "micro",
    "dev": "micro",
    "lint": "eslint lib",
    "test": "jest --watch",
    "test:once": "jest",
    "precommit": "lint-staged",
    "commitmsg": "commitlint -e $GIT_PARAMS"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "apollo-server-micro": "^2.6.3",
    "compression": "1.7.2",
    "contentful": "6.1.0",
    "dotenv": "^8.0.0",
    "graphql": "^14.3.1",
    "graphql-yoga": "1.13.1",
    "md5": "2.2.1",
    "micro": "^9.3.4",
    "micro-cors": "^0.1.1",
    "nconf-camel-cased": "3.0.1",
    "require-dir": "1.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "6.2.0",
    "@commitlint/config-conventional": "6.1.3",
    "babel-eslint": "8.2.3",
    "dotenv": "^8.0.0",
    "eslint": "4.19.1",
    "husky": "0.14.3",
    "jest": "22.4.3",
    "lint-staged": "7.0.5",
    "nodemon": "1.17.5",
    "prettier": "1.12.1"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "lib/**/*.js"
    ]
  }
}
